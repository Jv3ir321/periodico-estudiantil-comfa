  <main class="container mx-auto p-6">
    <h2 class="text-2xl font-bold text-green-800 border-b-2 border-green-800 pb-2 mb-6">Editar Publicacion</h2>
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <form id="form" method="post" action="/guardar-cambios">
        <div class="mb-4">
          <label class="block text-gray-700 font-bold mb-2">Editar Título</label>
          <input name="nuevo_titulo" type="text" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" id="title">
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 font-bold mb-2">Editar Mensaje</label>
          <textarea name="nuevo_contenido" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" rows="4" id="content"></textarea>
        </div>

        <button type="submit" class="bg-green-700 text-white px-4 py-2 rounded-lg hover:bg-green-800 transition">
            Guardar Cambios
        </button>
      </form>
    </div>
    </main>


