    </div>

    <!-- Noticia Destacada -->
    <section class="mb-12 animate-fade-in-up">
      <h2 class="text-3xl font-bold text-gray-800 mb-6 section-title">Noticia Destacada</h2>
      <div class="bg-white rounded-2xl shadow-2xl overflow-hidden featured-card card-hover">
        <div class="image-overlay">
          <img src="/IE.png" alt="Evento escolar" class="w-full h-96 object-cover">
        </div>
        <div class="p-8">
