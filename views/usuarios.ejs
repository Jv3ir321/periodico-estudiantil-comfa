          <button onclick="showTab('mis-publicaciones')" class="tab-button active px-6 py-3 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors">
             Mis Publicaciones
          </button>
         
          </button>
        </div>
      </div>

      <!-- Contenido de las Tabs -->
      <div class="p-8">
        <!-- Tab: Mis Publicaciones -->
        <div id="mis-publicaciones" class="tab-content">
          <h3 class="text-2xl font-bold text-gray-800 mb-6 section-title">Mis Publicaciones</h3>
          <div class="space-y-4">
            <% if (!publicaciones || publicaciones.length === 0) { %>
              <p class="text-gray-600">No has realizado ninguna publicación aún.</p>
            <% } else { %>
              <% publicaciones.forEach(function(pub) { %>
                <div class="publication-card bg-gray-50 rounded-xl p-6 card-hover">
                  <div class="flex items-start justify-between mb-3">
                    <div class="flex-1">
                      <h4 class="text-xl font-bold text-green-800 mb-2"><%= pub.nombre_publicacion || pub.titulo || 'Sin título' %></h4>
                      <p class="text-gray-700 mb-3"><%= pub.contenido_publicacion || pub.resena || '' %></p>
                    </div>
                    <% if (pub.estado && (pub.estado.toLowerCase() === 'aprobada' || pub.estado.toLowerCase() === 'aprobado')) { %>
                      <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold whitespace-nowrap ml-4">
                        ✓ Aprobada
                      </span>
                    <% } else { %>
                      <span class="inline-block bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-xs font-semibold whitespace-nowrap ml-4">
                        ⏳ Pendiente
                      </span>
                    <% } %>
                  </div>
                </div>
              <% }); %>
            <% } %>
          </div>
        </div>

<!-- Tab: Editar Perfil -->
        <div id="editar-perfil" class="tab-content hidden">
